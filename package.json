{
  "name": "epstein-archive",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "NODE_ENV=production npm run build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "api": "tsx src/server.ts",
    "api:prod": "NODE_ENV=production tsx src/server.production.ts",
    "dev:api": "concurrently \"npm run api\" \"npm run dev\"",
    "start": "npm run api:prod",
    "start:full": "concurrently \"npm run api:prod\" \"npm run preview\"",
    "migrate": "tsx src/scripts/migrateData.ts",
    "migrate:full": "tsx src/scripts/fullMigrate.ts",
    "migrate:complete": "tsx src/scripts/completeDatabaseMigration.ts",
    "migrate:evidence-types": "tsx src/scripts/populateEvidenceTypes.ts",
    "migrate:verify": "tsx -e \"import { dataMigrator } from './src/scripts/migrateData'; dataMigrator.verifyMigration().then(console.log)\"",
    "populate:media": "tsx scripts/populateMediaItems.ts",
    "db:test": "tsx src/scripts/testDatabaseSchema.ts",
    "db:stats": "tsx -e \"import { databaseService } from './src/services/DatabaseService'; databaseService.getStatistics().then(console.log)\"",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:prod": "NODE_ENV=production playwright test",
    "clean": "./cleanup.sh",
    "build:deploy": "./build-and-deploy.sh"
  },
  "dependencies": {
    "@playwright/test": "^1.56.1",
    "better-sqlite3": "^9.2.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fuse.js": "^7.0.0",
    "helmet": "^7.1.0",
    "lucide-react": "^0.263.1",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-pdf": "^10.2.0",
    "react-router-dom": "^6.14.2",
    "react-virtualized": "^9.22.5",
    "react-window": "^2.2.3",
    "recharts": "^3.4.1",
    "tsx": "^4.6.2",
    "typescript": "^5.0.2",
    "winston": "^3.11.0",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-virtualized": "^9.21.21",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.5"
  }
}
