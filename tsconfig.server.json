{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/server.production.ts",
    "src/services/DatabaseService.ts",
    "src/config/index.ts",
    "src/scripts/fix_data_quality.ts",
    "src/scripts/rebuild_database.ts",
    "src/routes/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
